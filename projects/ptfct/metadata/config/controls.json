{
    "generateProject": {
        "parms": { 
            "DOM": {
               "id": "generateProjectButton"
            }
        },

        "scripts": {
            "updateHandler": {
                "conditions": {
                    "page.isRevision": "false",
                    "page.action": "'never'"
                }
            }
        }

    },
    "ftpSend": {
        "parms": { 
            "DOM": {
               "id": "ftpSendButton"
            }
        },

        "scripts": {
            "updateHandler": {
                "permissions": [
                   "isadmin",
                   "ismanager"
                ],
                "rols": [
                   "responsable",
                   "supervisor",
                   "autor"
                ],
                "conditions": {
                    "page.action": "'project_view'",
                    "page.generated":"true",
                    "page.isRevision": "false",
                    "page.updateButton": "0",
                    "page.ftpSendButton": "true"
                }
            }
        }

    },
    "fctConsolidateData": {
        "class": "WikiIocButton",
        "parms": { 
            "DOM": {
               "id": "fctConsolidateData",
               "title": "Consolidació de les dades",
               "class": "iocDisplayBlock"
            },
            "DJO": {
               "autoSize": true,
               "visible": false,
               "iconClass": "'iocConsolidateIcon'",
               "urlBase": "'lib/exe/ioc_ajax.php?call=project'",
               "standbyId": "'bodyContent'",
               "disableOnSend": true
            }
        },
        "scripts": {
            "getFunctions": {
                "path": "ConsolidateDataGetFunction.js"
            },
            "updateHandler": {
                "rols": [
                   "responsable",
                   "autor"
                ],
                "conditions": {
                    "page.action": "'project_view'",
                    "page.isRevision": "false",
                    "page.generated":"false"
                }
            }
        }

    },
    "fctUpdateDataProject": {
        "class": "WikiIocButton",
        "parms": { 
            "DOM": {
               "id": "fctUpdateDataProject",
               "title": "Actualització del Projecte",
               "class": "iocDisplayBlock"
            },
            "DJO": {
               "query": "'do=edit'",
               "autoSize": true,
               "visible": false,
               "iconClass": "'iocUpdateDataIcon'",
               "urlBase": "'lib/exe/ioc_ajax.php?call=projectUpdate'",
               "standbyId": "'bodyContent'",
               "disableOnSend": true
            }
        },

        "scripts": {
            "getFunctions": {
                "path": "UpdateGetFunction.js"
            },
            "updateHandler": {
                "rols": [
                   "responsable",
                   "autor"
                ],
                "conditions": {
                    "page.updateButton": "1",
                    "page.isRevision": "false",
                    "page.generated":"true"
                }
            }
        }

    },
    "fctHtmlExport": {
        "class": "WikiIocButton",
        "parms": {
            "DOM": {
               "id": "fctHtmlExport",
               "title": "fctHtmlExport",
               "class": "iocDisplayBlock"
            },
            "DJO": {
               "query": "'do=edit'",
               "autoSize": true,
               "visible": false,
               "iconClass": "'iocExportHtmlIcon'",
               "urlBase": "'lib/exe/ioc_ajax.php?call=projectExport'",
               "standbyId": "'bodyContent'",
               "disableOnSend": true
            }
        },
       
        "scripts": {
            "getFunctions": {
                "path": "htmlExportGetFunction.js"
            },
            "updateHandler": {
                "permissions": [
                   "isadmin",
                   "ismanager",
                   "isprojectmanager"
                ],
                "rols": [
                   "responsable",
                   "supervisor",
                   "autor"
                ],
                "conditions": {
                    "page.action": "'project_view'",
                    "page.generated":"true",
                    "page.isRevision": "false",
                    "page.updateButton": "0"
                }
            }
        }
    }
}
