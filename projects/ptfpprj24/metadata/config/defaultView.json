        "duradaCicle": {
            "type": "hidden"
        },
        "nsProgramacio": {
            "label": "Programació importada (nsProgramacio)",
            "n_columns": 2,
            "group": "main",
            "props": {
                "required": true,
                "title": "indiqueu la programació importada"
            },
            "config":{
                "readonly": {"and":[{"class":"ValidationByRoles", "data":{"roles":["responsable"], "deniedResponse":true}},
